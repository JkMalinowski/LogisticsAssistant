@model IEnumerable<LogisticsAssistant.Models.Lorries>

@{
    ViewData["Title"] = "Lorries";
}

<h1>Lorries</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Add New Lorry</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LorryBrand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxSpeed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BreakInMinutes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BreakAfterRideInHours)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LorryBrand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxSpeed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BreakInMinutes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BreakAfterRideInHours)
            </td>
            <td>
                <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
